{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "List of Requirements",
    "type": "array",
    "minItems": 1,
    "items": {
        "type": "object",
        "required": [
            "id",
            "title",
            "shall"
        ],
        "additionalProperties": false,
        "properties": {
            "id": {
                "type": "string",
                "pattern": "^REQ-[A-Z]+-[0-9]{3}$"
            },
            "title": {
                "type": "string",
                "minLength": 3
            },
            "shall": {
                "type": "string",
                "pattern": "(?i)shall"
            }
        }
    }
}
